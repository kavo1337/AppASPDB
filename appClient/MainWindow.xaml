<Window x:Class="appClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:appClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="650">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="PingButton"
                Content="Проверить API"
                Padding="12,6"
                Margin="0,0,8,0"
                Click="PingButton_Click"/>
            <Button x:Name="LoadButton"
                Content="Загрузить продукты"
                Padding="12,6"
                Click="LoadButton_Click"/>
        </StackPanel>

        <TextBox x:Name="Output"
             Grid.Row="2"
             IsReadOnly="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"
             Height="70"/>

        <GroupBox Grid.Row="4" Header="Добавить продукт">
            <Grid Margin="8">
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="Имя:" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameBox" MinWidth="220"/>

                    <Label Content="Почта:" VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailBox" MinWidth="80"/>

                    <Label Content="Изернаейм:" VerticalAlignment="Center"/>
                    <TextBox x:Name="UsernameBox" MinWidth="80"/>
                    
                    <Label Content="Пароль:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PasswordBox" MinWidth="80"/>

                    <Label Content="Хобби:" VerticalAlignment="Center"/>
                    <TextBox x:Name="HobbyBox" MinWidth="80"/>
                    
                    <Label Content="Возвраст:" VerticalAlignment="Center"/>
                    <TextBox x:Name="AgeBox" MinWidth="80"/>

                    <Label Content="Кол-во денег:" VerticalAlignment="Center"/>
                    <TextBox x:Name="BalanceBox" MinWidth="80"/>


                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <Button x:Name="AddButton"
                            Content="Добавить"
                            Click="AddButton_Click"
                            Width="100"/>

                        <Button x:Name="DeleteButton"
                            Content="Удалить"
                            Margin="20,0,0,0"
                            Click="DeleteButton_Click"
                            Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="ProductsGrid"
              Grid.Row="6"
              AutoGenerateColumns="True"
              IsReadOnly="True"/>
    </Grid>
</Window>
